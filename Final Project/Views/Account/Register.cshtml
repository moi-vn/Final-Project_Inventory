@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('https://c4.wallpaperflare.com/wallpaper/410/867/750/vector-forest-sunset-forest-sunset-forest-wallpaper-preview.jpg') no-repeat center center fixed; background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
    }

    .register-box {
        background: rgba(255, 255, 255, 0.92);
        padding: 35px 30px;
        border-radius: 12px;
        width: 320px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

        .register-box h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .register-box label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #444;
        }

        .register-box input[type="text"],
        .register-box input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.2s;
        }

        .register-box input:focus {
            outline: none;
            border-color: #007bff;
        }

        .register-box button {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .register-box button:hover {
                background-color: #218838;
            }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
        font-weight: bold;
    }

    footer {
        color: white;
    }

</style>

<div class="register-wrapper">
    <div class="register-box">
        <h2>Register</h2>
        <form method="post">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" />

            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" />

            <button type="submit">Register</button>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }
        </form>
    </div>
</div>
