<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Final_Project</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Final_Project.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="navbar-brand me-3">InventoryPro</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-light me-2" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn btn-outline-light me-2" asp-controller="UserController1" asp-action="List">All Items</a>
                    <a class="btn btn-outline-light me-2" asp-controller="UserController1" asp-action="History">History</a>
                    <a class="btn btn-outline-light me-3" asp-controller="Home" asp-action="Privacy">Privacy</a>
                }
            </div>

            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white me-3">Welcome, @User.Identity.Name!</span>
                    <a class="btn btn-outline-warning" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </nav>

    <div class="container flex-grow-1 pb-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light mt-auto py-3">
        <div class="text-start px-3">
            &copy; 2025 - Final Project
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
